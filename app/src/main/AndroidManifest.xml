<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fittoos.saikal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Saikal">
        <activity android:name=".RaceFinishedActivity"></activity>
        <activity android:name=".MainRaceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".JoinRaceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".CreateRaceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".UserRegistrationActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.Saikal.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>